<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.tiezi">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/knickname"
        android:textColor="@color/list"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/knickname"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="@color/list"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:textSize="25sp"
        android:textColor="@color/list"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/commentname"
        android:textColor="@color/list"
        app:layout_constraintTop_toBottomOf="@+id/content"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentct"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/commentname"
        android:textColor="@color/list"
/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:id="@+id/editcomment"
        android:background="@drawable/et"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/publishcomment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editcomment"
        android:background="@drawable/buttonstytle"
        android:text="发表"
        />


</androidx.constraintlayout.widget.ConstraintLayout>