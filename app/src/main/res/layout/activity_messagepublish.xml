<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.messagepublish">
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/publish"
        android:text="发表"
        android:onClick="onclick"
        android:background="@drawable/buttonstytle"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/title"
        android:hint="输入帖子标题"
        android:divider="@color/list"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/content"
        android:gravity="top"
        android:divider="@color/list"
        android:hint="输入帖子内容"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="100dp"
        android:background="@drawable/et"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/select_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content"
        android:src="@drawable/select"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/laugh"
        app:layout_constraintTop_toBottomOf="@+id/select_picture"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/laugh"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="发布表示我已阅读并同意《使用条款和隐私政策》"
        app:layout_constraintTop_toBottomOf="@+id/laugh"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>