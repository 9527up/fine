<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    >

    <ImageView
        android:id="@+id/denglu_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="168dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/huas"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/denglu_head"
        android:text="账号："
        android:id="@+id/zhanghao"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/Account"
        app:layout_constraintLeft_toRightOf="@+id/zhanghao"
        app:layout_constraintTop_toBottomOf="@+id/denglu_head"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/mima"
        app:layout_constraintTop_toBottomOf="@+id/zhanghao"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="密码："
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/Account"
        app:layout_constraintLeft_toRightOf="@+id/mima"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/login"
        android:text="登陆"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:background="@drawable/buttonstytle"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="280dp"
        android:id="@+id/asign"
        android:clickable="true"
        android:onClick="onClick"
        android:text="注册账号"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/denglu_phone"
        android:src="@drawable/call"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="152dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="138dp"
        android:text="手机号登陆"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/denglu_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>