<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/home_image"
        android:src="@drawable/backg"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        android:id="@+id/button_siji"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/siji"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/button_liuji"
        android:background="@drawable/liuji"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_siji"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button_jiaozi"
        android:background="@drawable/jiaozi"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_liuji"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button_kaoyan"
        android:background="@drawable/kaoyan"
        app:layout_constraintLeft_toRightOf="@+id/button_jiaozi"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button_erji"
        android:background="@drawable/erji"
        app:layout_constraintTop_toBottomOf="@id/home_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="130dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/tuofu"
        android:id="@+id/button_tuofu"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_erji"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/button_yasi"
        android:background="@drawable/yasi"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_tuofu"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/button_mandrain"
        android:background="@drawable/putonghua"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_yasi"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/button_zhuanye"
        android:background="@drawable/zhuanye"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/button_xinxi"
        android:background="@drawable/xinxi2"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_zhuanye"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/button_zhengshu"
        android:background="@drawable/zhengshu"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_xinxi"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/xianzhi"
        android:id="@+id/button_xianzhi"
        app:layout_constraintTop_toBottomOf="@+id/home_image"
        app:layout_constraintLeft_toRightOf="@+id/button_zhengshu"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/laugh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_xianzhi" />


</androidx.constraintlayout.widget.ConstraintLayout>